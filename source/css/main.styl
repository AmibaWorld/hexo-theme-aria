@import "variables";
@import "nib";
.main {
  margin-top: - $search-height;
  .main-body {
    width: 100%;
    background: $color-main-background;
    box-sizing: border-box;
    box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
    border-radius: bottom $corner-radius;
    display: flex;
    if (hexo-config("sidebar") == "left") {
      flex-direction: row-reverse;
    } else {
      flex-direction: row;
    }
    justify-content: space-between;
    align-items: stretch;
    flex-wrap: nowrap;
    padding: 0;
    .content {
      flex-grow: 1;
      flex-basis: 75%;
      width: 75%;
      flex-shrink: 1;
      .index-post {
        display: block;
        background: white;
        padding: 1em;
        margin: 0.5em;
        box-sizing: border-box;
        box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
        img {
          width: 100%;
          text-align: center;
          border: 0.15em solid $grey;
          box-sizing: border-box;
          box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
          transition: 0.3s ease-in-out;
          &:hover {
            opacity: 0.9;
          }
        }
        .readmore {
          display: inline-block;
          padding: 0.25em 1em;
          font-size: 1em;
          color: $color-link-index-button;
          text-decoration: none;
          border-radius: $corner-radius;
          transition: 1s ease-in-out;
          transform-origin: 50%;
          background: $color-link-index-button-background;
          border-bottom: none;
          margin: 0.5em;
          box-sizing: border-box;
          box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
          &:hover {
            border-bottom: none;
            transform: rotateX(360deg);
          }
          &:active {
            top: 0.1em;
          }
        }
        .post-tag {
          display: inline-block;
          text-decoration: none;
          color: $color-link-index-button;
          transition: 1s ease-in-out;
          transform-origin: 50%;
          border-radius: $corner-radius;
          margin: 0.25em;
          padding: 0.15em;
          border-bottom: none;
          box-sizing: border-box;
          box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
          &:hover {
            border-bottom: none;
            transform: rotateX(360deg);
          }
          &:active {
            top: 0.1em;
          }
        }
        .post-header {
          padding: 0.25em 0.25em;
          .post-title-link {
            display: inline-block;
            position: relative;
            text-decoration: none;
            color: $color-font;
            &::after {
              content: " ";
              position: absolute;
              width: 100%;
              height: 0.1em;
              bottom: 0;
              left: 0;
              background: $color-font;
              visibility: hidden;
              transform: scaleX(0);
              transition: 0.3s ease-in-out;
            }
            &:hover::after {
              visibility: visible;
              transform: scaleX(1);
            }
          }
        }
      }
    }
  }
  @media (max-width: 768px) {
    .main-body {
      flex-direction: column;
      .content {
        width: 100%;
      }
    }
  }
}
