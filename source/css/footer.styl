@import "variables";
@import "nib";
.footer {
  .footer-container {
    padding-right: 1em;
    padding-bottom: 1em;
    padding-left: 1em;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    flex-wrap: nowrap;
    .footer-left {
      flex-grow: 1;
      flex-basis: 50%;
      flex-shrink: 1;
      text-align: left;
    }
    .footer-right {
      flex-grow: 1;
      flex-basis: 50%;
      flex-shrink: 1;
      text-align: right;
    }
  }
  margin-top: 1.5em;
  background: $color-footer-background;
  color: $color-lighter-font;
  &::selection {
    color: $color-lighter-selection-font;
    background: $color-lighter-selection;
  }
  a {
    color: $color-light-link;
    text-decoration: none;
    border-bottom: 0.05em dotted $color-light-link;
    transition: 0.3s ease-in-out;
    &:hover {
      color: $color-light-link-hover;
      border-bottom: 0.05em solid $color-light-link-hover;
    }
    &:active {
      top: 0.1em;
    }
  }
  .back-to-top {
    display: block;
    text-align: center;
    a {
      border-bottom: none;
      background: $color-background;
      color: $color-link;
      overflow: hidden;
      display: inline-block;
      margin: 0 auto;
      padding: 0 1em;
      border-radius: bottom $corner-radius;
      font-size: 2em;
      &:hover {
        color: $color-link-hover;
        border-bottom: none;
      }
      &:active{
        border-bottom: none;
      }
    }
  }
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      .footer-left {
        text-align: left;
      }
      .footer-right {
        text-align: left;
      }
    }
  }
}
