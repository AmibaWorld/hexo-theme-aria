@import "variables";
.category-container {
  // background: white;
  padding-top: 20px;
  padding-right: 20px;
  padding-bottom: 20px;
  padding-left: 50px;
  // margin: 10px;
  // box-sizing: border-box;
  // box-shadow: 0px 3px 20px 0.5px rgba(0, 0, 0, 0.19);
  .category-title {
    position: relative;
    padding-left: 20px;
    font-size: 2em;
    &::before {
      content: " ";
      position: absolute;
      top: 20px;
      left: 0px;
      margin-left: -2px;
      width: 4px;
      height: 100%;
      background: $grey-light;
    }
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -6px;
      margin-top: -6px;
      width: 12px;
      height: 12px;
      background: $grey;
      border-radius: 50%;
    }
  }
  .category-post {
    background: white;
    position: relative;
    padding-left: 20px;
    font-size: 1.5em;
    box-sizing: border-box;
    box-shadow: 0px 3px 20px 0.5px rgba(0, 0, 0, 0.19);
    .post-title {
      padding: 5px 0;
    }
    &::before {
      content: " ";
      position: absolute;
      top: -50%;
      left: 0px;
      margin-left: -2px;
      width: 4px;
      height: 200%;
      background: $grey-light;
    }
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -4px;
      margin-top: -4px;
      width: 8px;
      height: 8px;
      background: $grey;
      border-radius: 50%;
    }
    .post-date {
      font-size: 0.8em;
      color: $color-link;
    }
    .post-title-link {
      display: inline-block;
      position: relative;
      text-decoration: none;
      color: $color-link;
      border-bottom: 1px dashed $grey;
      transition: 0.3s ease-in-out;
      &:hover {
        color: $color-link-hover;
        border-bottom: 1px solid $color-link-hover;
      }
    }
  }
  }
