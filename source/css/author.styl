.author {
  text-align: center;
  .author-avatar {
    max-width: 70%;
  }
  .author-name {
    color: $color-author-name;
    font-size: 1.5em;
  }
  .author-description {
    color: $color-author-description;
    font-size: 1.2em;
  }
}
.social-links {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-start;
  flex-wrap: wrap;
  a {
    display: block;
    text-decoration: none;
    color: $color-link;
    transition: 0.2s ease-in-out;
    padding: 5px;
    margin: 0 5px;
    &:hover {
      border-radius: 4px;
      color: $color-light-link-hover;
      background: $color-light-link-hover-background;
    }
    &:active {
      top: 2px;
    }
  }
}
