@import "variables";
.author {
  text-align: center;
  .author-avatar {
    max-width: 70%;
    display: block;
    margin: 0 auto;
    border: 0.1em solid $blue;
    border-radius: 50%;
    box-shadow: inset 0 -0.05em 0 #333;
    transition: 1s ease-in-out;
    &:hover {
      transform: rotateY(720deg);
    }
  }
  .author-name {
    color: $color-author-name;
    font-size: 1.5em;
  }
  .author-description {
    color: $color-author-description;
    font-size: 1.2em;
  }
  .rss {
    display: block;
    font-size: 1.5em;
    text-decoration: none;
    border-bottom: none;
    color: $color-link-index-button;
    background: $orange;
    transition: 1s ease-in-out;
    transform-origin: 50%;
    border-radius: $corner-radius;
    margin: 0.25em;
    padding: 0.15em;
    box-sizing: border-box;
    box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
    &:hover {
      border-bottom: none;
      transform: rotateX(360deg);
    }
    &:active {
      top: 0.1em;
    }
  }
}
