@import "variables";
@import "nib";
@import "reward";
.post-article {
  .post-header {
    text-align: center;
  }
  .post-footer {
    text-align: center;
    .post-tags .post-tag {
      position: relative;
      margin: 0.5em;
      display: inline-block;
      text-decoration: none;
      color: $color-button-font;
      padding: 0.15em;
      line-height: 1.2em;
      &:active {
        top: 0.1em;
      }
    }
  }
}
.post-nav {
  margin: 1em;
  padding: 1em 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  flex-wrap: nowrap;
  .post-nav-item {
    flex: 1 0 auto;
    font-size: 1.2em;
    a {
      position: relative;
      display: inline-flex;
      flex-direction: row;
      flex-wrap: nowrap;
      align-items: center;
      text-decoration: none;
      border-bottom: none;
      span {
        margin: 0.3em;
      }
      &:active {
        top: 0.1em;
      }
    }
  }
  .post-nav-next {
    max-width: 45%;
    text-align: left;
    a {
      justify-content: flex-start;
    }
  }
  .post-nav-prev {
    max-width: 45%;
    text-align: right;
    a {
      justify-content: flex-end;
    }
  }
}
