@import "variables"
.reward {
  padding: 0.5em 0;
  margin: 1em auto;
  width: 90%;
  text-align: center;
  .qr {
    div {
      padding: 0.5em;
      display: inline-block;
      img {
        width: 10em;
        display: inline-block;
      }
      span {
        display: block;
      }
    }
    text-align: center;
  }
  button {
    cursor: pointer;
    border: 0;
    outline: 0;
    padding: 0;
    margin: 0;
    letter-spacing: normal;
    text-transform: none;
    text-indent: 0;
    text-shadow: none;
    background: $red;
    color: white;
    border-radius: $corner-radius;
    line-height: 2em;
    span {
      padding: 0.5em 0.5em;
    }
  }
}
