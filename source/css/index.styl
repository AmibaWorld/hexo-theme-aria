html, body, .container {
  height: 100%;
}
::selection {
  color: $color-selection-font;
  background: $color-selection;
}
body {
  color: $color-font;
  background: $color-background;
  font: $font-size $font-sans;
  -webkit-text-size-adjust: 100%;
}
a {
  color: $color-link;
  &:hover {
    color: $color-link-hover;
  }
  &:active {
    top: 2px;
  }
}
hr {
  margin: 40px 0;
  height: 3px;
  border: none;
  margin-left:auto;
  margin-right:auto;
  width: auto;
  position: relative;
  display: block;
  box-sizing: content-box;
  background-color: #ddd;
  background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px);
}
code {
  margin: 0 2px;
  color: $orange;
  padding: 3px 5px;
  font-size: 1em;
  border-radius: $corner-radius;
  font-family: $font-mono;
  background-color: #f8f8f8;
}
figure {
  font-size: 1em;
  border-radius: $corner-radius
}
.rtl {
  p, a, h1, h2, h3, h4, h5, h6, li, ul, ol {
    direction: rtl;
    font-family: UKIJ Ekran;
  }
}
.container {
  position: relative;
  padding: 0;
  max-width: $container-max-width;
  min-width: $container-min-width;
  width: 100%;
  margin: 0 auto;
}
.pagination {
  padding: 20px;
  display: block;
  text-align: center;
  .page-number, .extend {
    position: relative;
    overflow: hidden;
    font-size: 20px;
    padding: 10px 10px;
    display: inline;
    margin: 0 10px;
    text-decoration: none;
    border-bottom: 3px solid $grey;
    transition: 0.2s ease-in-out;
    &:hover {
      border-bottom: 3px solid $color-link-hover;
    }
    &.current {
      border-bottom: 3px solid $color-link-hover;
      border-top: 1px solid $color-link-hover;
    }
  }
  .space {
    font-size: 20px;
    margin: 0 10px;
    color: $grey;
  }
}
if (hexo-config("animate") != false) {
  .animate {
    animation: 1s flip forwards;
    position: relative;
    transform-origin: 50%;
    top: 5%;
    opacity: 0;
    transform: rotateX(180deg);
    @keyframes flip {
      0% {
        top: 5%;
        opacity: 0;
      }
      100% {
        opacity: 1;
        transform: rotateX(0);
        top: 0;
      }
    }
  }
}
