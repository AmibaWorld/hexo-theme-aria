html, body, .container {
  height: 100%;
}
::selection {
  color: $color-selection-font;
  background: $color-selection;
}
::-webkit-scrollbar {
  width: 0.5em;
  height: 0.5em;
}
::-webkit-scrollbar-track {
  background: 0 0;
}
::-webkit-scrollbar-thumb {
  background-color: #999;
  border-radius: 0.25em;
  &:hover {
    background-color: #666;
  }
}
::-webkit-scrollbar-corner {
  background-color: #535353;
}
::-webkit-scrollbar-resizer {
  background-color: #FF6E00;
}
body ::-webkit-scrollbar {
  width: 0.4em;
}
body ::-webkit-scrollbar-thumb {
  background-color: #ddd;
}
body {
  color: $color-font;
  background: $color-background;
  font: $font-size $font-sans;
  -webkit-text-size-adjust: 100%;
  display: flex;
  min-height: 100%;
  flex-direction: column;
}
main {
  flex-grow: 1;
}
a {
  color: $color-link;
  text-decoration: none;
  border-bottom: 0.05em dotted $color-link;
  transition: 0.3s ease-in-out;
  &:hover {
    color: $color-link-hover;
    border-bottom: 0.05em solid $color-link-hover;
  }
  &:active {
    top: 0.1em;
  }
}
a.button {
  text-decoration: none;
  border-radius: $corner-radius;
  transform-origin: 50%;
  border-bottom: none;
  box-sizing: border-box;
  box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
  &:hover {
    transform: rotateX(360deg);
    border-bottom: none;
  }
  &:active {
    top: 0.1em;
  }
}
a.gallery-item {
  text-decoration: none;
  border-bottom: none;
  transition: 0.3s ease-in-out;
  &:hover {
    border-bottom: none;
    opacity: 0.9;
  }
}
hr {
  margin: 2em 0;
  height: 0.3em;
  border: none;
  margin-left:auto;
  margin-right:auto;
  width: auto;
  position: relative;
  display: block;
  box-sizing: content-box;
  background-color: #ddd;
  background-image: repeating-linear-gradient(-45deg, #fff, #fff 0.25em, transparent 0.25em, transparent 0.5em);
}
code {
  margin: 0.05em 0.05em;
  color: $orange;
  padding: 0.125em 0.25em;
  overflow: auto;
  font-size: 1em;
  border-radius: $corner-radius;
  font-family: $font-mono;
  background-color: #f8f8f8;
}
figure {
  overflow: auto;
  font-size: 1em;
  border-radius: $corner-radius;
  line-height: 1.2em;
  .gutter {
    text-align: right;
    padding-right: 0.5em;
    border-right: 0.1em dashed $grey;
  }
  .code {
    padding-left: 0.5em;
  }
}
.rtl {
  p, a, h1, h2, h3, h4, h5, h6, li, ul, ol {
    direction: rtl;
    font-family: UKIJ Ekran;
  }
}
.caption {
  color: $grey-dark;
  display: block;
  text-align: center;
}
.container {
  position: relative;
  padding: 0;
  max-width: $container-max-width;
  width: 100%;
  margin: 0 auto;
}
.blockquote-center {
  position: relative;
  margin: 2em 0;
  padding: 0;
  border-left: none;
  text-align: center;
  &::before, &::after {
    position: absolute;
    content: " ";
    display: block;
    width: 100%;
    height: 1.2em;
    opacity: 0.2;
    background-repeat: no-repeat;
    background-position: 0 -0.4em;
    background-size: 1.2em 1.2em;
  }
  &::before {
    top: -1em;
    background-image: url(../images/quote-l.svg);
    border-top: 0.1em solid $grey-light;
  }
  &::after {
    bottom: -1em;
    background-image: url(../images/quote-r.svg);
    border-bottom: 0.1em solid $grey-light;
    background-position: 100% 0.4em;
  }
  p, div {
    text-align: center;
  }
}
.pagination {
  padding: 1.5em;
  display: block;
  text-align: center;
  .page-number, .extend {
    position: relative;
    overflow: hidden;
    font-size: 1.2em;
    padding: 0.5em;
    display: inline;
    margin: 0 0.5em;
    text-decoration: none;
    border-bottom: 0.15em solid $grey;
    transition: 0.3s ease-in-out;
    &:hover {
      border-bottom: 0.15em solid $color-link-hover;
    }
    &.current {
      color: $color-link-hover;
      border-bottom: 0.15em solid $color-link-hover;
      border-top: 0.05em solid $color-link-hover;
    }
  }
  .space {
    font-size: 1em;
    margin: 0 0.5em;
    color: $grey;
  }
}
.animate {
  animation: 1s flip forwards;
  position: relative;
  transform-origin: 50%;
  top: 5%;
  // opacity: 0;
  transform: rotateX(180deg);
  @keyframes flip {
    0% {
      top: 5%;
      opacity: 0;
    }
    100% {
      // opacity: 1;
      transform: rotateX(0);
      top: 0;
    }
  }
}
