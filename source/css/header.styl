@import "variables";
.header {
  padding-bottom: $search-height;
  margin-bottom: 0;
  background: $color-header-background;
  position: relative;
  &::selection {
    color: $color-light-selection-font;
    background: $color-light-selection;
  }
  .header-box {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-betweem;
    align-items: stretch;
    flex-wrap: wrap;
    width: 100%;
    .header-title {
      flex-grow: 2;
      color: $color-title;
      padding: 10px 10px;
      a {
        color: $color-title;
        text-decoration: none;
        border-bottom: none;
        &:hover {
          color: $color-title;
          border-bottom: none;
        }
      }
      .title {
        font-size: $font-size-title;
      }
      .subtitle {
        font-style: italic;
        text-shadow: 0 1px rgba(0, 0, 0, 0.2);
      }
    }
    .logo {
      flex-grow:  1;
      text-align: center;
      padding-top:20px;
      img {
        max-width: 400px;
        width: 100%;
      }
    }
  }
}
