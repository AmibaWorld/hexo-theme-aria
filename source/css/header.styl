@import "nav";
.header {
    margin-bottom: 0px;
    background: $color-header-background;
    position: relative;
    ::selection {
        color: $color-header-selection-font;
        background: $color-header-selection;
    }
    .header-title {
        color: $color-title;
        padding: 10px 10px;
        a {
            color: $color-title;
            text-decoration: none;
            &:hover {
                color: $color-title-hover;
            }
        }
        .title {
            font-size: $font-size-title;
        }
        .subtitle {
            font-style: italic;
            text-shadow: 0 1px rgba(0, 0, 0, 0.2);
        }
    }
}
