{% extends "_layout.njk" %}

{% block title %}Archives | {{ config.title }} - {{ config.subtitle }}{% endblock %}

{% block content %}
<section id="archive" class="archive">
  <div class="archive-counter">
    {% if site.posts.length > 1 %}
    <p>You have {{ site.posts.length }} posts. Keep on!</p>
    {% elif site.posts.length == 1 %}
    <p>You have {{ site.posts.length }} post. Keep on!</p>
    {% else %}
    <p>You have no post. Write now!</p>
    {% endif %}
  </div>
  {% set year = "1970" %}
  {% for post in page.posts.toArray() %}
  {% if date(post.date, "YYYY") != year %}
  {% set year = date(post.date, "YYYY") %}
  <h3 class="archive-year animate">{{ year }}</h2>
  {% endif %}
  <article class="archive-post animate" itemscope itemtype="http://schema.org/Article">
    <h3 class="post-title" itemprop="name headline">
      <a class="post-title-link post-title-link-external{% if post.direction and post.direction.toLowerCase() == \"rtl\" %} rtl{% endif %}" href="{{ url_for(post.path) }}" itemprop="url">{{ post.title }}</a>
      {% if post.date %}
      <span class="post-date">
        <time title="post-date" itemprop="dateCreated datePublished" datetime="{{ moment(post.date).format() }}">{{ date(post.date, "MM-DD") }}</time>
      </span>
      {% endif %}
    </h3>
  </article>
  {% endfor %}
  {% if page.prev or page.next %}
  <nav class="pagination">
  {{
    paginator({
      prev_text: '<i class="fas fa-angle-left"></i>',
      next_text: '<i class="fas fa-angle-right"></i>',
      mid_size: 1
    })
  }}
  </nav>
  {% endif %}
</section>
{% endblock %}
